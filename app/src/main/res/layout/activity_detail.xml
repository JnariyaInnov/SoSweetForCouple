<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/heart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:transitionName="heart"
        android:visibility="gone" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="#f8f8f8"
            android:orientation="horizontal"
            android:padding="40dp">

            <com.liz.wangying.sosweet.utils.SVGPathView
                android:id="@+id/svg_path_view1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fillColor="@color/white"
                app:fillDuration="2000"
                app:originalHeight="555"
                app:originalWidth="480"
                app:strokeColor="@color/white"
                app:strokeDrawingDuration="3000"
                app:strokeWidth="1dp" />

            <com.liz.wangying.sosweet.utils.SVGPathView
                android:id="@+id/svg_path_view2"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                app:fillColor="@color/white"
                app:fillDuration="2000"
                app:originalHeight="200"
                app:originalWidth="200"
                app:strokeColor="@color/white"
                app:strokeDrawingDuration="3000"
                app:strokeWidth="1dp" />

            <com.liz.wangying.sosweet.utils.SVGPathView
                android:id="@+id/svg_path_view3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                app:fillColor="@color/white"
                app:fillDuration="2000"
                app:originalHeight="150"
                app:originalWidth="150"
                app:strokeColor="@color/white"
                app:strokeDrawingDuration="3000"
                app:strokeWidth="1dp" />

            <com.liz.wangying.sosweet.utils.SVGPathView
                android:id="@+id/svg_path_view4"
                android:layout_width="70dp"
                android:layout_height="60dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                app:fillColor="@color/white"
                app:fillDuration="2000"
                app:originalHeight="150"
                app:originalWidth="150"
                app:strokeColor="@color/white"
                app:strokeDrawingDuration="3000"
                app:strokeWidth="1dp" />
        </RelativeLayout>
    </RelativeLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/bg"
        android:gravity="center"
        android:text="我能理财，一键式理财APP"
        android:textColor="#555"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="62dp"
            android:layout_height="62dp"
            android:background="@drawable/shape_rect_corner">

            <com.github.jorgecastillo.FillableLoader
                android:id="@+id/fillableLoader"
                android:layout_width="62dp"
                android:layout_height="62dp"
                android:layout_gravity="center"
                android:background="@drawable/shape_rect_corner2"
                app:fl_clippingTransform="waves"
                app:fl_fillColor="#fff"
                app:fl_fillDuration="2000"
                app:fl_originalHeight="512"
                app:fl_originalWidth="512"
                app:fl_strokeColor="#fff"
                app:fl_strokeWidth="1dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:text="我能理财"
            android:textColor="#000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="2016xxxxxxxxx"
            android:textColor="#e3e3e3"
            android:textSize="12dp" />
    </LinearLayout>

</LinearLayout>
